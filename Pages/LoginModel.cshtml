@page
@model PROEL4W.Pages.LoginModelModel
@{
    // Setting Layout to null removes the Nav bar, Footer, and default CSS
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - PROEL4W</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
        }
    </style>
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-lg border-0" style="width: 100%; max-width: 400px; border-radius: 15px;">
            <div class="card-body p-5">
                <h2 class="text-center mb-4 fw-bold text-primary">Welcome</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Users.Username" class="form-control" placeholder="Username" autocomplete="username" />
                        <label asp-for="Users.Username">Username</label>
                        <span asp-validation-for="Users.Username" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Users.Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" />
                        <label asp-for="Users.Password">Password</label>
                        <span asp-validation-for="Users.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Login</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a href="#" class="text-muted small text-decoration-none">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 @*    @await RenderSectionAsync("Scripts", required: false) *@

</body>
</html>